[alias]
    c = clone
    cr = clone --recursive
    co = checkout

[url "https://"]
    insteadOf = git://

[url "https://github.com/"]
    insteadOf = gh:

[url "git@github.com:"]
    pushInsteadOf = https://github.com/
    pushInsteadOf = git://github.com/
    pushInsteadOf = gh:

[url "git@bitbucket.org:"]
    insteadOf = bb:
    pushInsteadOf = bb:

[url "git@gitlab.com:"]
    insteadOf = gl:
    pushInsteadOf = gl:
