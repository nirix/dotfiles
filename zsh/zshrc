#if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
#  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
#fi

if [[ -s "$HOME/.dotfiles/zsh/prezto/init.zsh" ]]; then
  source "$HOME/.dotfiles/zsh/prezto/init.zsh"
fi

# Customize to your needs...


# Linux or OS X?
if [ "$(uname)" != "Darwin" ]; then

  # chruby
  if [[ -s "/usr/share/chruby/chruby.sh" ]]; then
    source /usr/share/chruby/chruby.sh
    source /usr/share/chruby/auto.sh
  fi


else

  # SSL Certificate file
  export SSL_CERT_FILE="`brew --prefix curl-ca-bundle`/share/ca-bundle.crt"

  # chruby
  if [[ -s "/usr/local/share/chruby/chruby.sh" ]]; then
    source /usr/local/share/chruby/chruby.sh
    source /usr/local/share/chruby/auto.sh
  fi

fi

# Load fasd
alias fasd="$HOME/.dotfiles/modules/fasd/fasd"
eval "$(fasd --init auto)"

source "$HOME/.dotfiles/aliases"

# COLORS! YAY!
export LSCOLORS="GxfxcxdxbxGxDxabagacad"

# Path
export PATH=$HOME/.local/bin:$PATH

# Bindings

# vi
bindkey -v

