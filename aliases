# Alias to fix the crappy subl tool for Sublime
#alias subt="subl; subl -a"
#alias st="subt"

# Sublime Text 3
alias st="/Applications/Other/Development/Sublime\ Text.app/Contents/SharedSupport/bin/subl"

# Spotify control from the CLI
alias spotify="osascript ~/.dotfiles/modules/spotify_control/SpotifyControl.scpt"

# Lazy
alias py=python
alias be="bundle exec"

# Rubinius stuff
alias xgem="rbx -S gem"
alias xbundle="rbx -S bundle"
alias xrake="rbx -S rake"
alias xrails="rbx -S rails"
alias xpuma="rbx -S puma"

# MariaDB
alias mdbstart="mysql.server start"
alias mdbstop="mysql.server stop"

# PostgreSQL
alias pgstart="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pgstop="pg_ctl -D /usr/local/var/postgres stop"

# Apache, eh
alias httpdstart="sudo apachectl start"
alias httpdstop="sudo apachectl stop"
alias httpdre="sudo apachectl restart"

# Easily start/stop MySQL and Apache
alias startserver="mdbstart; httpdstart"
alias stopserver="mdbstop; httpdstop"

# http://xkcd.com/530/
alias stfu="osascript -e 'set volume output muted true'"
alias pumpitup="osascript -e 'set volume 10'"
alias hax="growlnotify -a 'Activity Monitor' 'System error' -m 'WTF R U DOIN'"
