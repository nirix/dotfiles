[alias]
    c = clone
    cr = clone --recursive
    co = checkout

[url "https://"]
    insteadOf = git://

[url "git@github.com:"]
    insteadOf = https://github.com/
    insteadOf = git://github.com/
    insteadOf = gh:

[url "git@bitbucket.org:"]
    insteadOf = bb:
    pushInsteadOf = bb:

[url "git@gitlab.com:"]
    insteadOf = gl:

[branch]
	autosetuprebase = always

[commit]
	gpgsign = true
